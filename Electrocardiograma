#define LOMENOS 11
#define LOMAS 10
#define SIGNAL A0

void setup() {
  Serial.begin(9600);
  pinMode(LOMENOS, INPUT);
  pinMode(LOMAS, INPUT);
}

void loop() {
  if (digitalRead(LOMENOS) == HIGH || digitalRead(LOMAS) == HIGH) {
    Serial.println(512); // l√≠nea base cuando no hay contacto
  } else {
    int val = analogRead(SIGNAL);
    Serial.println(val);
  }
  delay(50);
}
